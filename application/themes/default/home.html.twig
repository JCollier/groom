{% block content %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
 <head>
   <title>Welcome to Gfits</title>
    <script src="{{ js_path['global'] }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ css_path['global'] }}">
    <link rel="stylesheet" type="text/css" href="{{ css_path['bootstrap'] }}">
    <link rel="stylesheet" type="text/css" href="{{ css_path['bootstrap_theme'] }}">
 </head>
    <div class="">
        <div class="navbar navbar-blend-top height-header width-full pos-float-left bg-success" role="navigation">
            <div id="header_links" class="pos-float-right">
                Header Links:
                {% for link in links_header %}
                    <a href="{{ link['url'] }}">{{ link['label']}}</a>
                {% endfor %}
            </div>
        </div>
        <div id="container-home" class="bg-color-gray width-full pos-float-left">
<!--             <h2>Userid: {{ userid }}</h2>
            <h2>Username: {{ username }}</h2> -->
            <div id="div-donators">
                <div style="width:100%; height:100px; border:1px solid black; float:left;">
                    Here are our top donators
                </div>
                <div style="width:100% height:400px;">
                <center>
                {% set n=1 %}
                {% for user in display_params.users.donators %}
                    <div style="padding-right:20px; width:20%; float:left;">
                        <div style="min-width:142px; height:300px;">
                            <div style="width:100%; height:100%; border:1px solid black; float:left;">
                                <div>#{{ n }}</div>

                                {% if user.profile_public %}
                                    <a href="profile/{{ user.profile_id }}">
                                        <img src="{{ user.profile_img_src }}">
                                    </a>
                                {% else %}
                                    <img src="{{ user.profile_img_src }}">
                                {% endif %}

                                <div>{{ user.username }}</div>
                            </div>
                        </div>
                    </div>
                    {% set n = n + 1 %}
                </center>
                {% endfor %}
                </div>
            </div>
            <div id="div-recipients">
            </div>
        </div>
        <div class="col-xs-12">        
            <div class="col-xs-2"></div>
            <div class="col-xs-8">
                Home Page Will Go Here
            </div>
            <div class="col-xs-2"></div>
        </div>        
        <div class="height-footer width-full pos-float-left bg-info" style="position:absolute; bottom:0;">
            <div id="header_links" class="pos-float-right">
                Footer Links:
                {% for link in links_footer %}
                    <a href="{{ link['url'] }}">{{ link['label']}}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</body>
</html>

{% endblock %}
